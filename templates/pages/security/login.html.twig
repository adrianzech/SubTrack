{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="card bg-base-100 h-full w-full flex items-center justify-center py-12">
        <div class="card-body">
            <h2 class="card-title text-center text-2xl font-bold mb-6">Login</h2>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 text-center">
                    <div class="mb-2">You are already logged in as {{ app.user.userIdentifier }}.</div>
                    <a href="{{ path('app_logout') }}" class="btn btn-primary">Logout</a>
                </div>
            {% else %}

                <!-- Login Form -->
                {{ form_start(loginForm) }}
                <!-- Email Input -->
                <div class="form-control w-full mb-4">
                    {{ form_label(loginForm.email, 'Email', {'label_attr': {'class': 'label-text'}}) }}
                    {{ form_widget(loginForm.email, {'attr': {'class': 'input input-bordered w-full', 'value': last_username}}) }}
                    {{ form_errors(loginForm.email) }}
                </div>

                <!-- Password Input -->
                <div class="form-control w-full mb-6">
                    {{ form_label(loginForm.password, 'Password', {'label_attr': {'class': 'label-text'}}) }}
                    {{ form_widget(loginForm.password, {'attr': {'class': 'input input-bordered w-full'}}) }}
                    {{ form_errors(loginForm.password) }}
                </div>

                <!-- Remember Me Checkbox -->
                <div class="form-control mb-6">
                    <label class="cursor-pointer label justify-start">
                        {{ form_widget(loginForm.rememberMe, {'attr': {'class': 'checkbox checkbox-primary mr-2'}}) }}
                        <span class="label-text">Remember me</span>
                    </label>
                    {{ form_errors(loginForm.rememberMe) }}
                </div>

                <!-- Submit Button -->
                <div class="card-actions justify-end">
                    <button type="submit" class="btn btn-primary w-full">Login</button>
                </div>

                <!-- Register Link -->
                <div class="text-center mt-4">
                    <p>Don't have an account? <a href="{{ path('app_register') }}"
                                                 class="link link-primary">Register</a></p>
                </div>
                {{ form_end(loginForm) }}

            {% endif %}
        </div>
    </div>
{% endblock %}