{% extends 'base.html.twig' %}

{% block title %}{{ "app_subscription_edit"|trans }}{% endblock %}

{% block body %}
    <div class="container mx-auto py-8 px-4 max-w-4xl">
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title">{{ "app_subscription_edit"|trans }}</h2>
                <p class="text-base-content/70">{{ "app_subscription_edit_title"|trans }}</p>

                <div class="divider"></div>

                {{ form_start(form) }}
                {% if not form.vars.valid %}
                    <div class="alert alert-error mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <h3 class="font-medium">{{ "app_submission_error"|trans }}</h3>
                            <div class="mt-2">
                                {{ form_errors(form) }}
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <div class="form-control mb-4">
                            {{ form_label(form.name, 'app_subscription_name'|trans, {'label_attr': {'class': 'label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'input input-bordered w-full'}}) }}
                            {% if form_errors(form.name) %}
                                <div class="text-error text-sm mt-1">{{ form_errors(form.name) }}</div>
                            {% endif %}
                        </div>

                        <div class="form-control mb-4">
                            {{ form_label(form.category, 'app_category'|trans, {'label_attr': {'class': 'label'}}) }}
                            {{ form_widget(form.category, {'attr': {'class': 'select select-bordered w-full'}}) }}
                            {% if form_errors(form.category) %}
                                <div class="text-error text-sm mt-1">{{ form_errors(form.category) }}</div>
                            {% endif %}
                        </div>

                        <div class="form-control mb-4">
                            {{ form_label(form.amount, 'app_amount'|trans, {'label_attr': {'class': 'label'}}) }}
                            {{ form_widget(form.amount, {'attr': {'class': 'input input-bordered w-full'}}) }}
                            {% if form_errors(form.amount) %}
                                <div class="text-error text-sm mt-1">{{ form_errors(form.amount) }}</div>
                            {% endif %}
                        </div>

                        <div class="form-control mb-4">
                            {{ form_label(form.paymentMethod, 'app_payment_method'|trans, {'label_attr': {'class': 'label'}}) }}
                            {{ form_widget(form.paymentMethod, {'attr': {'class': 'select select-bordered w-full'}}) }}
                            {% if form_errors(form.paymentMethod) %}
                                <div class="text-error text-sm mt-1">{{ form_errors(form.paymentMethod) }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div>
                        <div class="form-control mb-4">
                            {{ form_label(form.billingCycle, 'app_subscription_billing_cycle'|trans, {'label_attr': {'class': 'label'}}) }}
                            {{ form_widget(form.billingCycle, {'attr': {'class': 'select select-bordered w-full'}}) }}
                            {% if form_errors(form.billingCycle) %}
                                <div class="text-error text-sm mt-1">{{ form_errors(form.billingCycle) }}</div>
                            {% endif %}
                        </div>

                        <div class="form-control mb-4">
                            {{ form_label(form.billingOffset, 'app_subscription_billing_offset'|trans, {'label_attr': {'class': 'label'}}) }}
                            {{ form_widget(form.billingOffset, {'attr': {'class': 'input input-bordered w-full'}}) }}
                            {% if form_errors(form.billingOffset) %}
                                <div class="text-error text-sm mt-1">{{ form_errors(form.billingOffset) }}</div>
                            {% endif %}
                            <p class="text-xs text-base-content/70 mt-1">{{ form_help(form.billingOffset) }}</p>
                        </div>

                        <div class="form-control mb-4">
                            {{ form_label(form.startDate, 'app_subscription_start_date'|trans, {'label_attr': {'class': 'label'}}) }}
                            {{ form_widget(form.startDate, {'attr': {'class': 'input input-bordered w-full'}}) }}
                            {% if form_errors(form.startDate) %}
                                <div class="text-error text-sm mt-1">{{ form_errors(form.startDate) }}</div>
                            {% endif %}
                        </div>

                        <div class="form-control mb-4">
                            {{ form_label(form.endDate, 'app_subscription_end_date'|trans, {'label_attr': {'class': 'label'}}) }}
                            {{ form_widget(form.endDate, {'attr': {'class': 'input input-bordered w-full'}}) }}
                            {% if form_errors(form.endDate) %}
                                <div class="text-error text-sm mt-1">{{ form_errors(form.endDate) }}</div>
                            {% endif %}
                            <p class="text-xs text-base-content/70 mt-1">{{ form_help(form.endDate) }}</p>
                        </div>
                    </div>
                </div>

                <div class="form-control mt-4">
                    <label class="label cursor-pointer justify-start">
                        {{ form_widget(form.autoRenewal, {'attr': {'class': 'checkbox'}}) }}
                        <span class="label-text ml-2">{{ "app_subscription_auto_renewal"|trans }}</span>
                    </label>
                </div>

                <div class="divider"></div>

                <div class="card-actions justify-end">
                    <a href="{{ path('app_subscription_index') }}" class="btn btn-ghost">
                        {{ "app_cancel"|trans }}
                    </a>
                    <button type="submit" class="btn btn-primary">
                        {{ "app_subscription_edit"|trans }}
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}