{% extends 'base.html.twig' %}

{% block title %}Subscriptions{% endblock %}

{% block body %}
    <div class="container mx-auto py-8 px-4">
        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">Settings</h1>
        </div>

        <!-- Flash Messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert {{ label == 'success' ? 'alert-success' : 'alert-error' }} mb-6">
                    <div class="flex">
                        {% if label == 'success' %}
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        {% endif %}
                        &nbsp;{{ message }}
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Account Settings -->
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">Account</h1>
        </div>

        <!-- Main Container for Both Tables -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Categories Settings -->
            <div>
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold">Categories</h1>
                    <a href="{{ path('app_settings_category_new') }}" class="btn btn-primary">
                        Add Category
                    </a>
                </div>
                <!-- Categories Table -->
                <div class="card bg-base-100 shadow-xl h-full">
                    {% if categories is empty %}
                        <div class="card-body items-center text-center">
                            <p class="text-base-content opacity-70">No categories found. Get started by adding your
                                first
                                category.</p>
                            <div class="card-actions mt-6">
                                <a href="{{ path('app_settings_category_new') }}" class="btn btn-primary">
                                    Add Category
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <div class="overflow-x-auto">
                            <table class="table table-zebra">
                                <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td>
                                            <div class="font-medium">{{ category.name }}</div>
                                        </td>
                                        <td>
                                            <div class="join">
                                                <a href="{{ path('app_settings_category_edit', {'id': category.id}) }}"
                                                   class="btn btn-sm btn-ghost join-item">Edit</a>
                                                <form method="post"
                                                      action="{{ path('app_settings_category_delete', {'id': category.id}) }}"
                                                      class="inline"
                                                      onsubmit="return confirm('Are you sure you want to delete this category?');">
                                                    <input type="hidden" name="_token"
                                                           value="{{ csrf_token('delete' ~ category.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-ghost text-error join-item">
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Payment Methods Settings -->
            <div>
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold">Payment Methods</h1>
                    <a href="{{ path('app_settings_payment_method_new') }}" class="btn btn-primary">
                        Add Payment Method
                    </a>
                </div>
                <!-- Payment Methods Table -->
                <div class="card bg-base-100 shadow-xl h-full">
                    {% if paymentMethods is empty %}
                        <div class="card-body items-center text-center">
                            <p class="text-base-content opacity-70">No payment methods found. Get started by adding your
                                first
                                payment method.</p>
                            <div class="card-actions mt-6">
                                <a href="{{ path('app_settings_payment_method_new') }}" class="btn btn-primary">
                                    Add Payment Method
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <div class="overflow-x-auto">
                            <table class="table table-zebra">
                                <thead>
                                <tr>
                                    <th>Payment Method</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for paymentMethod in paymentMethods %}
                                    <tr>
                                        <td>
                                            <div class="font-medium">{{ paymentMethod.name }}</div>
                                        </td>
                                        <td>
                                            <div class="join">
                                                <a href="{{ path('app_settings_payment_method_edit', {'id': paymentMethod.id}) }}"
                                                   class="btn btn-sm btn-ghost join-item">Edit</a>
                                                <form method="post"
                                                      action="{{ path('app_settings_payment_method_delete', {'id': paymentMethod.id}) }}"
                                                      class="inline"
                                                      onsubmit="return confirm('Are you sure you want to delete this payment method?');">
                                                    <input type="hidden" name="_token"
                                                           value="{{ csrf_token('delete' ~ paymentMethod.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-ghost text-error join-item">
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}